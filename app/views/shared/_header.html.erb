<div class="header-wrapper">
  <header class="page-header">
    <h1><%= link_to "Rechercher un contact", contacts_path, class: "header-link" %></h1>
    <% if session[:username].present? %>
      <div class="user-info">
        <span>User: <strong><%= session[:username] %></strong></span>
        <%= link_to "Logout", logout_path, data: { turbo_method: :delete }, class: "btn btn-logout" %>
      </div>
    <% end %>
  </header>
</div>

