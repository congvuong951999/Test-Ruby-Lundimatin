<div class="contacts-container">
  <%= render 'shared/header' %>
  
  <!-- Content Wrapper -->
  <div class="content-wrapper">
    <% if @contact %>
      <!-- Contact Name and Edit Button -->
      <div class="contact-name-section">
        <h2 class="contact-name-large"><%= @contact['nom'] || 'N/A' %></h2>
        <button class="btn btn-edit" type="button" disabled>
          <svg class="icon-gear" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 15.5A3.5 3.5 0 0 1 8.5 12A3.5 3.5 0 0 1 12 8.5a3.5 3.5 0 0 1 3.5 3.5a3.5 3.5 0 0 1-3.5 3.5m7.43-2.53c.04-.32.07-.64.07-.97c0-.33-.03-.66-.07-1l2.11-1.63c.19-.15.24-.42.12-.64l-2-3.46c-.12-.22-.39-.31-.61-.22l-2.49 1c-.52-.4-1.06-.73-1.69-.98l-.37-2.65A.506.506 0 0 0 14 2h-4c-.25 0-.46.18-.5.42l-.37 2.65c-.63.25-1.17.59-1.69.98l-2.49-1c-.22-.09-.49 0-.61.22l-2 3.46c-.13.22-.07.49.12.64L4.57 11c-.04.34-.07.67-.07 1c0 .33.03.65.07.97l-2.11 1.66c-.19.15-.25.42-.12.64l2 3.46c.12.22.39.3.61.22l2.49-1.01c.52.4 1.06.73 1.69.98l.37 2.65c.04.24.25.42.5.42h4c.25 0 .46-.18.5-.42l.37-2.65c.63-.25 1.17-.59 1.69-.98l2.49 1.01c.22.08.49 0 .61-.22l2-3.46c.12-.22.07-.49-.12-.64l-2.11-1.66Z"></path>
          </svg>
          Editer
        </button>
      </div>
      
      <!-- Edition Form Section -->
      <div class="contact-edition-section">
        <h3 class="edition-title">EDITION</h3>
        
        <% if flash[:alert] %>
          <div class="alert alert-error">
            <%= flash[:alert] %>
          </div>
        <% end %>
        
        <%= form_with url: contact_path(@contact['id']), method: :patch, local: true, class: "edition-form" do |f| %>
          <div class="edition-grid">
            <div class="edition-labels">
              <div class="edition-label">Prénom & NOM</div>
              <div class="edition-label">Téléphone</div>
              <div class="edition-label">Email</div>
              <div class="edition-label">Adresse</div>
              <div class="edition-label">Code postal</div>
              <div class="edition-label">Ville</div>
            </div>
            <div class="edition-divider"></div>
            <div class="edition-inputs">
              <div class="edition-input-wrapper">
                <%= text_field_tag 'contact[nom]', @contact['nom'], class: "edition-input" %>
              </div>
              <div class="edition-input-wrapper">
                <%= text_field_tag 'contact[tel]', @contact['tel'], 
                    class: "edition-input", 
                    pattern: "[0-9]+", 
                    title: "Telephone must contain only numbers",
                    oninput: "this.value = this.value.replace(/[^0-9]/g, '')" %>
              </div>
              <div class="edition-input-wrapper">
                <%= email_field_tag 'contact[email]', @contact['email'], 
                    class: "edition-input",
                    pattern: "[^@]+@[^@]+\\.[^@]+",
                    title: "Email must contain @ symbol" %>
              </div>
              <div class="edition-input-wrapper">
                <%= text_field_tag 'contact[adresse]', @contact['adresse'], class: "edition-input" %>
              </div>
              <div class="edition-input-wrapper">
                <%= text_field_tag 'contact[code_postal]', @contact['code_postal'], 
                    class: "edition-input",
                    pattern: "[0-9]+",
                    title: "Postal code must contain only numbers",
                    oninput: "this.value = this.value.replace(/[^0-9]/g, '')" %>
              </div>
              <div class="edition-input-wrapper">
                <%= text_field_tag 'contact[ville]', @contact['ville'], class: "edition-input" %>
              </div>
            </div>
          </div>
          
          <div class="edition-actions">
            <%= link_to "Annuler", contact_path(@contact['id']), class: "btn btn-cancel", data: { turbo_prefetch: false } %>
            <%= f.submit "Enregistrer", class: "btn btn-save" %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="alert alert-error">
        Contact not found
      </div>
    <% end %>
  </div>
</div>

