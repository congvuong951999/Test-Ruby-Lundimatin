<div class="contacts-container">
  <%= render 'shared/header' %>
  
  <!-- Content Wrapper -->
  <div class="content-wrapper">
    <% if flash[:alert] %>
      <div class="alert alert-error">
        <%= flash[:alert] %>
      </div>
    <% end %>
    
    <% if flash[:notice] %>
      <div class="alert alert-success">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <% if @contact %>
      <!-- Contact Name and Edit Button -->
      <div class="contact-name-section">
        <h2 class="contact-name-large"><%= @contact['nom'] || 'N/A' %></h2>
        <%= link_to edit_contact_path(@contact['id']), class: "btn btn-edit", data: { turbo_prefetch: false } do %>
          <svg class="icon-gear" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 15.5A3.5 3.5 0 0 1 8.5 12A3.5 3.5 0 0 1 12 8.5a3.5 3.5 0 0 1 3.5 3.5a3.5 3.5 0 0 1-3.5 3.5m7.43-2.53c.04-.32.07-.64.07-.97c0-.33-.03-.66-.07-1l2.11-1.63c.19-.15.24-.42.12-.64l-2-3.46c-.12-.22-.39-.31-.61-.22l-2.49 1c-.52-.4-1.06-.73-1.69-.98l-.37-2.65A.506.506 0 0 0 14 2h-4c-.25 0-.46.18-.5.42l-.37 2.65c-.63.25-1.17.59-1.69.98l-2.49-1c-.22-.09-.49 0-.61.22l-2 3.46c-.13.22-.07.49.12.64L4.57 11c-.04.34-.07.67-.07 1c0 .33.03.65.07.97l-2.11 1.66c-.19.15-.25.42-.12.64l2 3.46c.12.22.39.3.61.22l2.49-1.01c.52.4 1.06.73 1.69.98l.37 2.65c.04.24.25.42.5.42h4c.25 0 .46-.18.5-.42l.37-2.65c.63-.25 1.17-.59 1.69-.98l2.49 1.01c.22.08.49 0 .61-.22l2-3.46c.12-.22.07-.49-.12-.64l-2.11-1.66Z"></path>
          </svg>
          Editer
        <% end %>
      </div>
      
      <!-- Informations Section -->
      <div class="contact-informations-section">
        <h3 class="informations-title">INFORMATIONS</h3>
        <div class="informations-grid">
          <div class="informations-labels">
            <div class="info-label">Prénom & NOM</div>
            <div class="info-label">Téléphone</div>
            <div class="info-label">Email</div>
            <div class="info-label">Adresse</div>
          </div>
          <div class="informations-divider"></div>
          <div class="informations-values">
            <div class="info-value"><%= @contact['nom'] || 'N/A' %></div>
            <div class="info-value"><%= @contact['tel'] || 'N/A' %></div>
            <div class="info-value"><%= @contact['email'] || 'N/A' %></div>
            <div class="info-value">
              <% if @contact['adresse'].present? %>
                <%= @contact['adresse'] %>
                <% if @contact['code_postal'].present? || @contact['ville'].present? %>
                  <br>
                  <%= [@contact['code_postal'], @contact['ville']].compact.join(' ') %>
                <% end %>
              <% else %>
                N/A
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% else %>
      <div class="alert alert-error">
        Contact not found
      </div>
    <% end %>
  </div>
</div>

