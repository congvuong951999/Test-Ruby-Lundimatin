<div class="login-container">
  <div class="login-card">
    <h1 class="login-title">Lundimatin Test Ruby</h1>
    
    <% if flash[:alert] %>
      <div class="alert alert-error">
        <%= flash[:alert] %>
      </div>
    <% end %>
    
    <% if flash[:notice] %>
      <div class="alert alert-success">
        <%= flash[:notice] %>
      </div>
    <% end %>
    
    <%= form_with url: login_path, method: :post, local: true, class: "login-form" do |f| %>
      <div class="form-group">
        <%= f.label :username, "User Name", class: "form-label" %>
        <%= f.text_field :username, class: "form-input", required: true, autofocus: true, placeholder: "Enter your user name" %>
      </div>
      
      <div class="form-group">
        <%= f.label :password, "Password", class: "form-label" %>
        <%= f.password_field :password, class: "form-input", required: true, placeholder: "Enter your password" %>
      </div>
      
      <div class="form-actions">
        <%= f.submit "Se connecter", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

